{
    "name": "vault-extractor",
    "version": "1.0.0",
    "description": "CLI tool to combine Obsidian markdown files from specified vault folders. Intended for use with NotebookLM.",
    "type": "module",
    "bin": {
        "combine-md": "./src/index.js"
    },
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "start": "node src/index.js",
        "lint": "eslint src tests",
        "lint:fix": "eslint src tests --fix"
    },
    "keywords": [
        "obsidian",
        "markdown",
        "cli",
        "notebooklm"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "cli-progress": "^3.12.0",
        "js-yaml": "^4.1.0",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jest": "^27.9.0",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.5"
    },
    "jest": {
        "transform": {},
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        }
    },
    "engines": {
        "node": ">=18.0.0"
    }
}